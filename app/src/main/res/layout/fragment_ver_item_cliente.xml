<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.VerItemClienteFragment">

    <ImageView
        android:id="@+id/ivVerItemClienteCaratula"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tvVerClienteArtista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvVerClienteArtista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Black Sun Empire"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tvVerClienteTitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivVerItemClienteCaratula" />

    <TextView
        android:id="@+id/tvVerClienteTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I Saw You"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnVerItemClienteCancelar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVerClienteArtista" />

    <Button
        android:id="@+id/btnVerItemClienteCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVerClienteTitulo" />
</androidx.constraintlayout.widget.ConstraintLayout>